<!-- Music Slider -->
<section class="slider_sec">
        <div class="container-fluid fix-cont">
            <div class="row">
                <div class="col-lg-12">
                    <div class="slider_in">
                        <h3>MUSIC GENRE</h3>


                        <div id="owl-carousel" class="owl-carousel owl-theme">


                           
                            <% Catogrie.all.each do |catogry| %>
                                <%= link_to catogrie_path(catogry) do%> 
                                    <div class="item">
                                    <div class="img_wrp">
                                        <div class="img_text">
                                            <h5><%= catogry.name %> </h5>
                                        </div>
                                        <img src="https://i.pinimg.com/originals/cb/90/98/cb9098c9be7bdf4864db889f935284b7.jpg" alt="">
                                    </div>
                                </div>
                                <%end%>
                            <% end %>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- // slder sec -->
    
    <script>
      //Jquery auto height
     
    $(document).ready(function(){
         $('#owl-carousel').owlCarousel({
            loop: true,
            margin: 50,
            responsiveClass: true,
            responsive: {
                0: {
                    items: 1,
                    nav: true
                },
                600: {
                    items: 2,
                    nav: false
                },
                768: {
                    items: 3,
                    nav: false
                },
                1000: {
                    items: 3,
                    nav: true,
                    loop: true
                }
            }
        });
    });
        
    </script>
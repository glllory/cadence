  <!-- Music Slider -->
  <section class="slider_sec">
    <div class="container-fluid fix-cont">
        <div class="row">
            <div class="col-lg-12">
                <div class="slider_in">
                    <h3>MUSIC GENRE</h3>
                    <div id="owl-carousel" class="owl-carousel owl-theme">
                        <% Catogrie.all.each do |catogry| %>
                            <%= link_to catogrie_path(catogry) do%> 
                                <div class="item">
                                  <div class="img_wrp">
                                    <div class="img_text">
                                        <h5><%= catogry.name %> </h5>
                                    </div>
                                    <img src="https://i.pinimg.com/originals/cb/90/98/cb9098c9be7bdf4864db889f935284b7.jpg" alt="">
                                  </div>
                                </div>
                            <%end%>
                        <% end %>
                    </div>
                </div>
            </div>
          </div>
      </div>
  </section>

    <!-- // slder sec -->
    <p id="notice"><%= notice %></p>

<div class="jumbotron majd">
  
      <strong><%= link_to 'My Songs', user_songs_path %></strong>
      <strong><%= link_to 'My favorite Songs', user_fav_songs_path %></strong>
      <h1>Most Recent Uploaded Songs</h1>
      
          <% @songs.each do |song| %>

            <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page" style="color: black;" >
            
            <span><%= song.artist %> - <%= song.title %></span>
            <p><%= Catogrie.find(song.catogrie_id).name %></p>
            <p><audio controls src="<%=song.url %>"></audio></p>   
            <span><%= Comment.where({song_id: song.id}).count%></span> 
            <span><%= link_to 'Commint', song %></span>  
            <% if current_user %>
            <span><%= Like.where({song_id: song.id}).count%></span>
            <span> 
            <% like = current_user.likes.where({song_id: song.id})[0]%>
            <% if like %>
              <% id = like.id %>
              <%= link_to song_like_path(song,id),  method: :delete  do%> unlike <%end%>
            <% else %>
              <%= link_to song_likes_path(song),  method: :post  do%> Like <%end%>
            <% end %> 
            </span>
            <% else %>
            <span><%= Like.where({song_id: song.id}).count%></span>
            <span><%= link_to 'Like', new_user_session_path %></span>  
            <% end %> 
            <span><%= link_to 'Show', song %></span>
            </li>
            </ol>
            </nav>
          <% end %>
      <br>
      <%= link_to 'New Song', new_song_path %>
  </div>



    <script>
      //Jquery auto height
     
    $(document).ready(function(){
         $('#owl-carousel').owlCarousel({
            loop: true,
            margin: 50,
            responsiveClass: true,
            responsive: {
                0: {
                    items: 1,
                    nav: true
                },
                600: {
                    items: 2,
                    nav: false
                },
                768: {
                    items: 3,
                    nav: false
                },
                1000: {
                    items: 3,
                    nav: true,
                    loop: true
                }
            }
        });
    });
        
    </script>












  <!-- Music Slider -->
  <section class="slider_sec">
    <div class="container-fluid fix-cont">
        <div class="row">
            <div class="col-lg-12">
                <div class="slider_in">
                    <h3>MUSIC GENRE</h3>
                    <div id="owl-carousel" class="owl-carousel owl-theme">
                        <% Catogrie.all.each do |catogry| %>
                            <%= link_to catogrie_path(catogry) do%> 
                                <div class="item">
                                  <div class="img_wrp">
                                    <div class="img_text">
                                        <h5><%= catogry.name %> </h5>
                                    </div>
                                    <img src="https://i.pinimg.com/originals/cb/90/98/cb9098c9be7bdf4864db889f935284b7.jpg" alt="">
                                  </div>
                                </div>
                            <%end%>
                        <% end %>
                    </div>
                </div>
            </div>
          </div>
      </div>
  </section>

    <!-- // slder sec -->
    <p id="notice"><%= notice %></p>

    <div class="jumbotron">
  
      <strong><%= link_to 'My Songs', user_songs_path %></strong>
      <strong><%= link_to 'My favorite Songs', user_fav_songs_path %></strong>
      
    
      <h1>Songs</h1>
      
      <table>
        <thead>
          <tr>
            <th>Img</th>
            <th>Artist</th>
            <th>Song Title</th>
            <th>Song Catogries</th>
            <th>Audio</th>
            <th>Number of Comments</th>
            <th>buttnCommint</th>
            <th>Number of Likes</th>
            <th>buttnLike</th>
            <th>Show</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @songs.each do |song| %>
            <tr>
          
            <td>image</td>
            <td><%= song.artist %></td>
            <td><%= song.title %></td>
            <td><%= Catogrie.find(song.catogrie_id).name %></td>
            <td><audio controls src="<%=song.url %>"></audio></td>   
            <td><%= Comment.where({song_id: song.id}).count%></td> 
            <td><%= link_to 'Commint', song %></td>    
            <% if current_user %>
            <td><%= Like.where({song_id: song.id}).count%></td>
            <td> 
            <% like = current_user.likes.where({song_id: song.id})[0]%>
            <% if like %>
              <% id = like.id %>
              <%= link_to song_like_path(song,id),  method: :delete  do%> unlike <%end%>
            <% else %>
              <%= link_to song_likes_path(song),  method: :post  do%>Like <%end%>
            <% end %> 
            </td>
            <% else %>
            <td><%= Like.where({song_id: song.id}).count%></td>
            <td><%= link_to 'Like', new_user_session_path %></td>  
            <% end %> 
            <td><%= link_to 'Show', song %></td>
      
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <br>
      
      <%= link_to 'New Song', new_song_path %>
  
  </div>




    <script>
      //Jquery auto height
     
    $(document).ready(function(){
         $('#owl-carousel').owlCarousel({
            loop: true,
            margin: 50,
            responsiveClass: true,
            responsive: {
                0: {
                    items: 1,
                    nav: true
                },
                600: {
                    items: 2,
                    nav: false
                },
                768: {
                    items: 3,
                    nav: false
                },
                1000: {
                    items: 3,
                    nav: true,
                    loop: true
                }
            }
        });
    });
        
    </script>











